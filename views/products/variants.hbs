{{#extends 'base'}}

{{#block 'css'}}
<link rel="stylesheet" href="/style/products.css">
{{/block}}

{{#block 'content'}}

<div class="row ms-2">
    <div>
        <h1>{{product.name}}</h1>
    </div>

    <div class="col-6 product-container py-2">
        {{!-- <img src="{{product.image_url}}" style="height:100%; width:100%; padding: 10px"></img> --}}
        <div id="carouselExampleIndicators" class="carousel carousel-dark slide" data-bs-ride="true">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"
                    aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                    aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                    aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="{{product.image_url}}" class="d-block w-100" alt="..."
                        style="height:100%; width:100%; padding: 10px">
                </div>
                <div class="carousel-item">
                    <img src="{{product.image_url}}" class="d-block w-100" alt="..."
                        style="height:100%; width:100%; padding: 10px">
                </div>
                <div class="carousel-item">
                    <img src="{{product.image_url}}" class="d-block w-100" alt="..."
                        style="height:100%; width:100%; padding: 10px">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <div class="col-6 specifications-container">
        <div class="mx-auto specifications-section">
            <div class="mt-3 ms-2" style="color: aliceblue; font-size: 20px">
                <h4>Product Specifications</h4>
                <ul>
                    <li>Brand: {{product.brand.brand_name}}</li>
                    <li>Collection: {{product.collection.collection}}</li>
                    <li>Material: {{product.material.material}}</li>
                    <li>Surface: {{product.surface.surface}}</li>
                    <li>Color: {{product.color.color}}</li>
                    <li>Closure: {{product.closure.closure}}</li>
                    <li>Cutting: {{product.cutting.cutting}}</li>
                </ul>


                <a href="/products/{{product.id}}/update" class="btn btn-hover">
                    <i class="me-2 fa-solid fa-pen-to-square"></i> Update Product
                </a>
            </div>
        </div>
    </div>
    <div class="col-12" style="background: aliceblue; width: 90%; height: 100px"></div>
    <div class="col-12" style="background: #0c0b14; color: white; width: 90%">
        {{!-- <a href="/products/{{product.id}}/variants/...." class="btn btn-hover">Add Size</a> --}}
        <div class="mt-4 ms-4" style="height:90%; width:90%">
            <h4>Size Availability</h4>
            <a href="/products/{{product.id}}/variants/create" class="my-3 btn btn-light">
                {{!-- <i class='bx bx-plus-circle' style="font-size: 17px"></i> --}}
                <i class="fa-solid fa-circle-plus"></i>
                Add Size
            </a>
            <table class="table" style="color: white">
                <thead>
                    <tr>
                        <th>Size</th>
                        <th>Stock</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each variants}}

                    <tr>
                        <td>{{this.size.size}}</td>
                        <td>{{this.stock}}</td>
                        <td>
                            <a href="/products/{{this.product_id}}/variants/{{this.id}}/update" class="btn btn-dark">
                                <i class="fa-solid fa-pen-to-square"></i> Update
                            </a>
                        </td>
                    </tr>         
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div style="height: 100px"></div>
</div>

{{/block}}

{{/extends}}