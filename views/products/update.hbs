{{#extends 'base'}}

{{#block 'content'}}
<div class="overflow-auto mt-3 p-3 shadow-lg rounded-3 col-12"
    style="width: 70%; min-width: 600px; margin-left:10%">
    <h1>Update product: {{product.name}}</h1>
    <form method="POST">
        {{> csrfToken}}
        {{{form}}}

        <div class="row mt-3 p-3">

            <div class="col-lg-4" style="border: 2px solid lightgray">
                {{#if product.image_url}}
                <img src="{{product.image_url}}" style="width: 100%" id="uploaded_image" />
                {{else}}
                <img src="" style="display:none; width: 100%" id="uploaded_image" />
                {{/if}}
                <a href="#" class="btn btn-dark ms-3 mt-3 mb-3" id="upload_widget"><i
                        class="fa-solid fa-arrow-up-from-bracket me-3"></i>Upload Image</a>
            </div>
            <div class="col-lg-4" style="border: 2px solid lightgray">
                {{#if product.image_url2}}
                <img src="{{product.image_url2}}" style="width: 100%" id="uploaded_image2" />
                {{else}}
                <img src="" style="display:none; width: 100%" id="uploaded_image2" />
                {{/if}}
                <a href="#" class="btn btn-dark ms-3 mt-3 mb-3" id="upload_widget2"><i
                        class="fa-solid fa-arrow-up-from-bracket me-3"></i>Upload 2nd Image</a>
            </div>
            <div class="col-lg-4" style="border: 2px solid lightgray">
                {{#if product.image_url3}}
                <img src="{{product.image_url3}}" style="width: 100%" id="uploaded_image3" />
                {{else}}
                <img src="" style="display:none; width: 100%" id="uploaded_image3" />
                {{/if}}
                <a href="#" class="btn btn-dark ms-3 mt-3 mb-3" id="upload_widget3"><i
                        class="fa-solid fa-arrow-up-from-bracket me-3"></i>Upload 3rd Image</a>
            </div>

        </div>
        <input type="submit" class="btn btn-dark my-3" />
    </form>
</div>
<div style="height: 50px"></div>
{{/block}}

{{#block 'js'}}

{{> cloudinaryJS}}

{{/block}}

{{/extends}}