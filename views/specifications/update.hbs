{{#extends 'base'}}

{{#block 'content'}}
<div class="d-flex justify-content-center">
    <div class="overflow-auto mt-3 p-3 shadow-lg rounded-3 col-12" style="width: 600px">
        {{#if specification.brand_name}}<h1>Update {{specification.brand_name}}</h1>{{/if}}
        {{#if specification.collection}}<h1>Update {{specification.collection}}</h1>{{/if}}
        {{#if specification.material}}<h1>Update {{specification.material}}</h1>{{/if}}
        {{#if specification.colour}}<h1>Update {{specification.colour}}</h1>{{/if}}
        {{#if specification.surface}}<h1>Update {{specification.surface}}</h1>{{/if}}
        {{#if specification.position}}<h1>Update {{specification.position}}</h1>{{/if}}
        {{#if specification.cutting}}<h1>Update {{specification.cutting}}</h1>{{/if}}
        {{#if specification.closure}}<h1>Update {{specification.closure}}</h1>{{/if}}
        <form method="POST">
            {{> csrfToken}}
            {{{form}}}

            {{#if specification.brand_name}}
            <div class="col-lg-4" style="border: 2px solid lightgray">
                {{#if specification.brand_logo}}
                <img src="{{specification.brand_logo}}" style="width: 100%" id="uploaded_image" />
                {{else}}
                <img src="" style="display:none; width: 100%" id="uploaded_image" />
                {{/if}}
                <a href="#" class="btn btn-dark ms-3 mt-3 mb-3" id="upload_widget"><i
                        class="fa-solid fa-arrow-up-from-bracket me-3"></i>Upload Image</a>
            </div>
            {{/if}}

            <input type="submit" value="Update" class="btn btn-dark mt-3" />
        </form>
    </div>
</div>
{{/block}}

