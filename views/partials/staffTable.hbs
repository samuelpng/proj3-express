<table class="table p-3">

    <thead>
        <tr>
            <th># ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>User Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        
        <tr>
            <td style="color:black">{{this.id}}</td>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.userType.user_type}}</td>
            <td>
                <a href="users/{{this.id}}/update" class="btn btn-dark p-1 pe-0" data-bs-toggle="tooltip"
                    data-bs-placement="top" title="Update">
                    <i class="me-2 fa-solid fa-pen-to-square p-1 pe-0" style="color:white; font-size: 18px"></i>
                </a>
                <a href="#" class="btn btn-dark p-1 delete-alert" data-name="{{this.first_name}} {{this.last_name}}" data-id="{{this.id}}"
                    data-type="user" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete">
                    <i data-name="{{this.first_name}} {{this.last_name}}" data-id="{{this.id}}" data-type="user"
                        class="fa-solid fa-trash-can p-1 delete-btn" style="color:white; font-size: 18px"></i>
                </a>
            </td>
        </tr>
        
    </tbody>

</table>