                    <i class="me-2 fa-solid fa-pen-to-square p-1 pe-0" style="color:white; font-size: 18px"></i>
                </a>
            </td>
            {{/if}}
            {{#if this.surface}}
            <td>{{this.surface}}</td>
            <td>{{this.surface_abbreviation}}</td>
            <td><a href="/specifications/surface/{{this.id}}/update" class="btn btn-dark p-1 pe-0" data-bs-toggle="tooltip"
                    data-bs-placement="top" title="Update">
                    <i class="me-2 fa-solid fa-pen-to-square p-1 pe-0" style="color:white; font-size: 18px"></i>
