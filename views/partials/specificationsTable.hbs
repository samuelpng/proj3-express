<table class="table p-3">

    <thead>
        <tr>
            <th># ID</th>
            {{#eq specificationName "Brand"}}<th>Brand Logo</th>{{/eq}}
            <th>{{specificationName}}</th>
            {{#eq specificationName "Collection"}}<th>Brand</th>{{/eq}}
            {{#eq specificationName "Surface Type"}}<th>Abbreviation</th>{{/eq}}
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each specifications}}
        <tr>
            <td style="color:black">{{this.id}}</td>
            {{#if this.brand_name}}
            <td><img src="{{this.brand_thumbnail}}" /></td>
            <td>{{this.brand_name}}</td>
            <td><a href="/specifications/brand/{{this.id}}/update" class="btn btn-dark p-1 pe-0" data-bs-toggle="tooltip"
                    data-bs-placement="top" title="Update">
                    <i class="me-2 fa-solid fa-pen-to-square p-1 pe-0" style="color:white; font-size: 18px"></i>
                </a>
            </td>
            {{/if}}
            {{#if this.collection}}
            <td>{{this.collection}}</td>
            <td>{{this.brand.brand_name}}</td>
            <td><a href="/specifications/collection/{{this.id}}/update" class="btn btn-dark p-1 pe-0" data-bs-toggle="tooltip"
                    data-bs-placement="top" title="Update">
                    <i class="me-2 fa-solid fa-pen-to-square p-1 pe-0" style="color:white; font-size: 18px"></i>
                </a>
            </td>
            {{/if}}
            {{#if this.material}}
            <td>{{this.material}}</td>
            <td><a href="/specifications/material/{{this.id}}/update" class="btn btn-dark p-1 pe-0" data-bs-toggle="tooltip"
                    data-bs-placement="top" title="Update">
                    <i class="me-2 fa-solid fa-pen-to-square p-1 pe-0" style="color:white; font-size: 18px"></i>
                </a>
            </td>
            {{/if}}
            {{#if this.colour}}
