                    <i class="me-2 fa-solid fa-pen-to-square p-1 pe-0" style="color:white; font-size: 18px"></i>
                </a>
            </td>
            {{/if}}
            {{#if this.position}}
            <td>{{this.position}}</td>
            <td><a href="/specifications/position/{{this.id}}/update" class="btn btn-dark p-1 pe-0" data-bs-toggle="tooltip"
                    data-bs-placement="top" title="Update">
                    <i class="me-2 fa-solid fa-pen-to-square p-1 pe-0" style="color:white; font-size: 18px"></i>
                </a>
            </td>
            {{/if}}
            {{#if this.closure}}
            <td>{{this.closure}}</td>
            <td><a href="/specifications/closure/{{this.id}}/update" class="btn btn-dark p-1 pe-0" data-bs-toggle="tooltip"
                    data-bs-placement="top" title="Update">
                    <i class="me-2 fa-solid fa-pen-to-square p-1 pe-0" style="color:white; font-size: 18px"></i>
                </a>
            </td>
