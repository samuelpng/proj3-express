{{#extends 'base'}}

{{#block 'content'}}
<div style="display:flex; width: 90%; justify-content: space-between">
    <h3 class="mt-3">Staffs</h3>
    <a href="/users/register" class="btn btn-dark mt-3">Register New User</a>
</div>
<div class="overflow-auto mt-3 p-3 shadow-lg rounded-3 col-12">
<table class="table p-3">
   
    <thead>
        <tr>
            <th># ID</th>
            <th>Username</th>
            <th>Email</th>
            <th>User Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each users}}
        <tr>
            <td style="color:black">{{this.id}}</td>
            <td>{{this.username}}</td>
            <td>{{this.email}}</td>
            <td>{{this.userType.user_type}}</td>
            <td>
                <a href="users/{{this.id}}/update" class="btn btn-dark p-1 pe-0" data-bs-toggle="tooltip"
                    data-bs-placement="top" title="Update">
                    <i class="me-2 fa-solid fa-pen-to-square p-1 pe-0" style="color:white; font-size: 18px"></i>
                </a>
                <a href="#" class="btn btn-dark p-1 delete-alert" data-name="{{this.username}}" data-id="{{this.id}}"
                    data-type="user" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete">
                    <i data-name="{{this.username}}" data-id="{{this.id}}" data-type="user"
                        class="fa-solid fa-trash-can p-1 delete-btn" style="color:white; font-size: 18px"></i>
                </a>
            </td>
        </tr>
        {{/each}}
    </tbody>

</table>
</div>
</div>
{{/block}}

{{#block 'js'}}

{{> sweetAlertJS deleteType="user"}}

{{/block}}

{{/extends}}